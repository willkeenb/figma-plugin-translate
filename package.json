{
  "name": "text-sync",
  "version": "1.0.0",
  "license": "MIT",
  "author": "My",
  "scripts": {
    "build": "yarn build:css && yarn build:js",
    "build:css": "tailwindcss --input ./src/ui/styles/input.css --output ./src/ui/styles/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "check": "biome check",
    "prepare": "husky install",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.cjs",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,json}": [
      "biome check --apply"
    ]
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.2.1-alpha.1",
    "@create-figma-plugin/utilities": "^3.2.1-alpha.1",
    "@testing-library/preact": "^2.0.0",
    "@types/react": "^17.0.0",
    "clsx": "^2.1.1",
    "i18next": "^23.15.2",
    "lodash": "^4.17.21",
    "preact": "^10.24.2",
    "preact-i18next": "^11.8.5",
    "query-string": "^9.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-i18next": "^15.0.2",
    "react-use": "^17.5.1",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@biomejs/biome": "^1.9.3",
    "@create-figma-plugin/build": "^3.2.1-alpha.1",
    "@create-figma-plugin/tsconfig": "^3.2.1-alpha.1",
    "@figma/plugin-typings": "^1.100.2",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/preact-hooks": "^1.1.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-preact": "^4.1.1",
    "lint-staged": "^15.2.10",
    "preact-render-to-string": "^6.5.11",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tailwindcss": "^3.4.13",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "yarn-upgrade-all": "^0.7.4"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "1418849803064613337",
    "name": "Text Sync",
    "main": "src/main/index.ts",
    "ui": "src/ui/index.tsx",
    "permissions": [
      "currentuser"
    ],
    "relaunchButtons": {
      "open": {
        "name": "Text Sync",
        "main": "src/main/index.ts",
        "ui": "src/ui/index.tsx"
      }
    },
    "documentAccess": "dynamic-page",
    "networkAccess": {
      "allowedDomains": [
        "https://fonts.googleapis.com",
        "https://fonts.gstatic.com",
        "https://api.notion.com",
        "https://*.workers.dev",
        "https://reverse-proxy.willkeenbe.workers.dev"
      ]
    }
  },
  "type": "module",
  "packageManager": "yarn@4.5.0",
  "resolutions": {
    "@testing-library/dom": "^10.0.0",
    "@testing-library/preact": "^2.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
